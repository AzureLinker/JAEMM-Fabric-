  "id": "vanillaextended",
  "version": "${version}",

  "name": "Vanilla Extended",
  "description": "This modification adds things that, in the opinion of the author, should be added to the original Minecraft.",
  "authors": [
    "ZianU"
  ],
  "contact": {
    "homepage": "",
    "sources": "https://github.com/AzureLinker/VanillaExtendedFabric"
  },

  "license": "MIT License",
  "icon": "assets/modid/icon.png",

  "environment": "*",
  "entrypoints": {
